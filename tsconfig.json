{
  "extends": "@tsconfig/node16/tsconfig.json",
  "compilerOptions": {
    "target": "esnext",
    "jsx": "react-jsx",
    "jsxImportSource": "@emotion/react",
    "paths": {
      "~/*": ["./src/*"]
    },
    "declaration": false,
    "resolveJsonModule": true,
    "lib": ["dom"]
  },
  "include": [
    ".",
    "src/**/*",
    "tests/**/*"
  ]
}
