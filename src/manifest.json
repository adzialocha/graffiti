{
  "manifest_version": 2,
  "name": "graffiti",
  "version": "0.1.0",
  "description": "Public space for the public web",
  "icons": {
    "128": "icon.png"
  },
  "background": {
    "persistent": false,
    "scripts": [
      "browser-polyfill.min.js",
      "background.js"
    ]
  },
  "content_scripts": [
    {
      "matches": ["*://*/*"],
      "js": ["index.js"]
    }
  ]
}
