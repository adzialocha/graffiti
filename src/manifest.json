{
  "manifest_version": 2,
  "name": "graffiti",
  "version": "0.1.0",
  "description": "Public space for the public web",
  "icons": {
    "128": "icon.png"
  },
  "permissions": [
    "activeTab"
  ],
  "browser_action": {
    "default_icon": "icon-32.png",
    "default_title": "Graffiti",
    "default_popup": "popup.html",
    "browser_style": true
  },
  "background": {
    "persistent": false,
    "scripts": [
      "background.js"
    ]
  },
  "content_scripts": [
    {
      "matches": ["*://*/*"],
      "js": [
        "content-script.js"
      ]
    }
  ]
}
